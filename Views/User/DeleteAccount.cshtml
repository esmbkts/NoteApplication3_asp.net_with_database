@model asp.net.Models.Account

@{
    ViewData["Title"] = "Confirm Delete Account";
}

<h2>Confirm Delete Account</h2>

<h3>Are you sure you want to delete this account?</h3>

<div>
    <h4>@Model.Username</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Model.Username
        </dd>
    </dl>

    <form asp-action="DeleteAccountConfirmed" method="post">
        <input type="hidden" asp-for="Username" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="AdminMenu" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
